<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Temperature Converter"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="#f74d14"
        android:fontFamily="@font/lobster"
         />

    <RadioGroup
        android:id="@+id/rgTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        >

        <RadioButton
            android:id="@+id/rbC2F"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Celsius to Fahrenheit"
            android:fontFamily="@font/lobster"
            android:checked="true"
            />

        <RadioButton
            android:id="@+id/rbF2C"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fahrenheit to Celsius"
            android:fontFamily="@font/lobster"
            />

    </RadioGroup>

    <EditText
        android:id="@+id/etInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Tempature"
        android:fontFamily="@font/lobster"
        android:layout_marginTop="50dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        >

        <Button
            android:id="@+id/btConvert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Convert"
            android:fontFamily="@font/lobster"
            android:backgroundTint="#fc470a"
            />

        <Button
            android:id="@+id/btClear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear"
            android:fontFamily="@font/lobster"
            android:backgroundTint="#fc470a"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/etOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Result is here"
        android:fontFamily="@font/lobster"
        android:layout_marginTop="50dp"
        android:editable="false"
        />

    <TextView
        android:id="@+id/tvThank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/lobster"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColorHighlight="#fc470a"
        android:layout_marginTop="50dp"
        android:gravity="center"
        />

</LinearLayout>